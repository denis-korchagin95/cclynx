@test("It should parse if statement (single statement)")
@given("file")
int main() {
    int x;
    x = 10;
    if (x < 5)
        x = 10;
}
@whenRun("./bin/parser-tester")
@expectOutput("stdout")
FunctionDefinition: {name: 'main', type: 'int'}
|
+-> CompoundStatement
    |
    +-> VariableDeclaration: {name: 'x', type: 'int'}
    |
    +-> ExpressionStatement
    |   |
    |   +-> AssignmentExpression: '='
    |       |
    |       +-> Variable: {name: 'x', type: 'int'}
    |       |
    |       +-> IntegerConstant: '10'
    |
    +-> SelectionStatement: 'if'
        |
        +-> (condition) RelationalExpression: '<'
        |   |
        |   +-> Variable: {name: 'x', type: 'int'}
        |   |
        |   +-> IntegerConstant: '5'
        |
        +-> (if statement) ExpressionStatement
            |
            +-> AssignmentExpression: '='
                |
                +-> Variable: {name: 'x', type: 'int'}
                |
                +-> IntegerConstant: '10'

@endtest

