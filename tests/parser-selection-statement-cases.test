@test("It should parse if statement (single statement)")
@given("file")
int main() {
    int x;
    x = 10;
    if (x < 5)
        x = 10;
}
@whenRun("./bin/parser-tester")
@expectOutput("stdout")
FunctionDefinition: 'main' {type: 'int'}
|
+-> CompoundStatement
    |
    +-> VariableDeclaration: 'x' {type: 'int'}
    |
    +-> ExpressionStatement
    |   |
    |   +-> AssignmentExpression: '='
    |       |
    |       +-> Variable: 'x' {type: 'int'}
    |       |
    |       +-> IntegerConstant: '10' {type: 'int'}
    |
    +-> IfStatement
        |
        +-> (condition) RelationalExpression: '<' {type: 'int'}
        |   |
        |   +-> Variable: 'x' {type: 'int'}
        |   |
        |   +-> IntegerConstant: '5' {type: 'int'}
        |
        +-> (true branch) ExpressionStatement
            |
            +-> AssignmentExpression: '='
                |
                +-> Variable: 'x' {type: 'int'}
                |
                +-> IntegerConstant: '10' {type: 'int'}

@endtest

