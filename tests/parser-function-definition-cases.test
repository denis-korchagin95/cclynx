@test("It should parse main function with return (empty expression)")
@given("file")
int main() {
    return;
}
@whenRun("./bin/parser-tester")
@expectOutput("stdout")
FunctionDefinition: 'main' {type: 'int'}
|
+-> CompoundStatement
    |
    +-> ReturnStatement

@endtest

@test("It should parse main function with return variable")
@given("file")
int main() {
    int result;
    result = 1;
    return result;
}
@whenRun("./bin/parser-tester")
@expectOutput("stdout")
FunctionDefinition: 'main' {type: 'int'}
|
+-> CompoundStatement
    |
    +-> VariableDeclaration: 'result' {type: 'int'}
    |
    +-> ExpressionStatement
    |   |
    |   +-> AssignmentExpression: '='
    |       |
    |       +-> Variable: 'result' {type: 'int'}
    |       |
    |       +-> IntegerConstant: '1' {type: 'int'}
    |
    +-> ReturnStatement
        |
        +-> Variable: 'result' {type: 'int'}

@endtest
